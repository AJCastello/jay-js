{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./src/index.ts",
    "./tests/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}