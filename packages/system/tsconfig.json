{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"lib": [
			"ESNext",
			"DOM"
		],
		"moduleResolution": "Bundler",
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"types": [
			"node",
			"vitest/globals"
		],
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*",
		"./src/index.ts",
		"./tests/**/*"
	],
	"exclude": [
		"./node_modules",
		"./dist",
		"legacy/draggable",
	]
}