{
  "name": "@jay-js/cli",
  "version": "1.0.0",
  "description": "A CLI for Jay JS",
  "bin": {
    "jayjs": "./bin/jayjs.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build:types": "tsc --emitDeclarationOnly --declaration --skipLibCheck",
    "build": "swc src -d dist --source-maps inline && pnpm run build:types",
    "postbuild": "cpy ./src/**/*.css ./dist && clean-package && cpy ./package.json ./dist && cpy ./README.md ./dist && clean-package restore",
    "pub": "cd ./dist && pnpm publish --access public",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src/**/*.{js,ts}"
  },
  "publishConfig": {
    "access": "public"
  },
  "clean-package": "../../clean-package.config.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AJCastello/jay-js.git",
    "directory": "packages/system"
  },
  "keywords": [
    "Jay",
    "js",
    "single page application",
    "library",
    "ui",
    "static",
    "site",
    "framework",
    "web",
    "cli",
    "command line interface"
  ],
  "author": "AJ Castello",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AJCastello/jay-js/issues"
  },
  "homepage": "https://github.com/AJCastello/jay-js#readme",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^11.0.3",
    "@types/jsdom": "^21.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "@jay-js/system": "^2.4.3",
    "@jay-js/ui": "^2.5.2",
    "@jay-js/jsx": "^1.0.0",
    "@jay-js/static": "^1.0.0"    
  },
  "dependencies": {
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "jsdom": "^22.1.0",
    "marked": "^9.1.3"
  }
}
