{
  "name": "@jay-js/ui",
  "version": "4.1.0",
  "description": "A library of UI components for Jay JS with Tailwind CSS and daisyUI.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/"
  },
  "scripts": {
    "build:types": "tsc --emitDeclarationOnly --declaration --skipLibCheck",
    "prebuild": "rimraf ./dist",
    "build": "swc src -d dist --strip-leading-paths",
    "postbuild": "cpy ./src/**/*.{css,styled} ./dist && clean-package && cpy ./package.json ./dist && cpy ./README.md ./dist && clean-package restore",
    "pub": "cd ./dist && npm publish --access public",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write ./src",
    "test": "jest --verbose",
    "test:full": "jest --verbose --coverage --coverageReporters=html --coverageReporters=text --collectCoverageFrom='src/**/*.{js,ts}'",
    "test:cover": "jest --coverage --coverageReporters=html --collectCoverageFrom='src/**/*.{js,ts}'",
    "test:watch": "jest --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "clean-package": "../../clean-package.config.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AJCastello/jay-js.git",
    "directory": "packages/ui"
  },
  "keywords": [
    "Jay",
    "js",
    "single page application",
    "library",
    "ui",
    "components",
    "tailwind",
    "daisyui",
    "headless"
  ],
  "author": "AJ Castello",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AJCastello/jay-js/issues"
  },
  "homepage": "https://github.com/AJCastello/jay-js#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/jest": "^29.5.14",
    "clsx": "^2.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.4.5",
    "tailwind-merge": "^2.3.0"
  },
  "peerDependencies": {
    "@jay-js/elements": "^1.0.0",
    "@jay-js/system": "^4.0.0",
    "tailwind-merge": "^2.3.0",
    "clsx": "^2.1.1"
  }
}