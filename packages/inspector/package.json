{
  "name": "@jay-js/inspector",
  "version": "1.0.0",
  "description": "Development inspector plugin for Jay JS components - click-to-source functionality",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./plugin": "./dist/plugin/index.js",
    "./runtime": "./dist/runtime/index.js"
  },
  "scripts": {
    "build:types": "tsc --emitDeclarationOnly --declaration --skipLibCheck",
    "prebuild": "rimraf ./dist",
    "build": "swc src -d dist --strip-leading-paths",
    "postbuild": "cpy ./src/**/*.{css,html} ./dist && clean-package && cpy ./package.json ./dist && cpy ./README.md ./dist && clean-package restore",
    "pub": "cd ./dist && npm publish --access public",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write ./src",
    "test": "jest --verbose",
    "test:watch": "jest --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "clean-package": "../../clean-package.config.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AJCastello/jay-js.git",
    "directory": "packages/inspector"
  },
  "keywords": [
    "Jay",
    "js",
    "inspector",
    "devtools",
    "click-to-source",
    "vite-plugin",
    "development-tools",
    "debugging"
  ],
  "author": "AJ Castello",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AJCastello/jay-js/issues"
  },
  "homepage": "https://github.com/AJCastello/jay-js#readme",
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "magic-string": "^0.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/babel__parser": "^7.1.1",
    "@types/babel__traverse": "^7.20.4",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.4.5",
    "vite": "^5.0.0"
  }
}