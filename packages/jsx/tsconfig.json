{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "paths": {
      "@jay-js/elements": [
        "../elements/src"
      ],
      "@jay-js/elements/*": [
        "../elements/src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/index.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}