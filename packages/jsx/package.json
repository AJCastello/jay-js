{
  "name": "@jay-js/jsx",
  "version": "1.3.0",
  "description": "A JSX library for Jay JS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build:types": "tsc --emitDeclarationOnly --declaration --skipLibCheck",
    "build": "swc src -d dist --strip-leading-paths && npm run build:types",
    "postbuild": "clean-package && cpy ./package.json ./dist && cpy ./README.md ./dist && clean-package restore",
    "pub": "cd ./dist && npm publish --access public",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "clean-package": "../../clean-package.config.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AJCastello/jay-js.git",
    "directory": "packages/jsx"
  },
  "keywords": [
    "Jay",
    "js",
    "single page application",
    "library",
    "ui",
    "components",
    "jsx",
    "tsx"
  ],
  "author": "AJ Castello",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AJCastello/jay-js/issues"
  },
  "homepage": "https://github.com/AJCastello/jay-js#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "typescript": "^5.4.5",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@jay-js/elements": "file:../elements"
  },
  "peerDependencies": {
    "@jay-js/ui": "^4.2.0",
    "@jay-js/elements": "^1.2.0"
  }
}