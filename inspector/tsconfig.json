{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES6",
			"ESNext"
		],
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"paths": {
			"@/*": [
				"./src/*"
			],
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts"
	],
	"include": [
		"src",
		"src/@types/*.d.ts"
	]
}