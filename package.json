{
  "private": true,
  "name": "@jay-js/monorepo",
  "description": "A powerful and flexible TypeScript library for UI, state management, lazy loading, routing and managing draggable elements in modern web applications.",
  "version": "1.0.0",
  "repository": "https://github.com/AJCastello/jay-js.git",
  "scripts": {
    "build": "turbo run build",
    "build:ui": "turbo run build --scope @jay-js/ui",
    "build:system": "turbo run build --scope @jay-js/system",
    "build:cli": "turbo run build --scope @jay-js/cli",
    "build:jsx": "turbo run build --scope @jay-js/jsx",
    "build:static": "turbo run build --scope @jay-js/static",
    "update:links": "pnpm run link:cli && pnpm run link:system && pnpm run link:ui && pnpm run link:jsx && pnpm run link:static",
    "link:cli": "(cd packages/cli/dist && pnpm link --global)",
    "link:system": "(cd packages/system/dist && pnpm link --global)",
    "link:ui": "(cd packages/ui/dist && pnpm link --global)",
    "link:jsx": "(cd packages/jsx/dist && pnpm link --global)",
    "link:static": "(cd packages/static/dist && pnpm link --global)",
    "unlink:all": "pnpm run unlink:static && pnpm run unlink:jsx && pnpm run unlink:ui && pnpm run unlink:system && pnpm run unlink:cli",
    "unlink:cli": "pnpm unlink --global @jay-js/cli",
    "unlink:system": "pnpm unlink --global @jay-js/system",
    "unlink:ui": "pnpm unlink --global @jay-js/ui",
    "unlink:jsx": "pnpm unlink --global @jay-js/jsx",
    "unlink:static": "pnpm unlink --global @jay-js/static"
  },  
  "author": "AJ Castello",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.56",
    "clean-package": "^2.2.0",
    "cpy-cli": "^4.2.0",
    "rimraf": "^5.0.0",
    "turbo": "^1.9.3"
  }
}